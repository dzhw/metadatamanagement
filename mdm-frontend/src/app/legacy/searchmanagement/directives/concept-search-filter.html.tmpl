<div ng-form="conceptFilterForm" layout="row" layout-align="center center">
    <md-autocomplete fdz-autofocus="!currentSearchParams.filter['concept']" md-delay="250" class="fdz-search-filter-component" md-input-name="conceptFilter" md-floating-label="{{'search-management.filter.floating-label.concept' | translate}}" flex md-min-length="0" md-require-match="true" md-select-on-match="true"
      md-selected-item="currentConcept" md-selected-item-change="onSelectionChanged(currentConcept)" md-search-text="searchText" md-items="item in searchConcepts(searchText)" md-item-text="(item.title | displayI18nString) + ' (' + item.id + ')'"
      md-clear-button="true" md-no-cache="true" md-menu-class="fdz-search-filter-items" md-select-on-focus="true">
        <md-item-template>
          <span class="item-title fdz-truncate-string">
            <strong lang="{{item.language}}" md-highlight-text="searchText" md-highlight-flags="ig">{{item.title | displayI18nString}}</strong>
            <span class="label label-as-badge label-default" md-highlight-text="searchText" md-highlight-flags="ig">{{item.id}}</span>
          </span>
          <span class="item-metadata fdz-truncate-string">{{'search-management.tabs.' + type + '-found' | translate:'{number:' + item.count + '}':'messageformat'}}</span>
        </md-item-template>
        <md-not-found>
          <span class="item-title fdz-truncate-string">
            <strong>{{'search-management.filter.concept-filter.not-found' | translate}}</strong>
          </span>
          <span class="item-metadata fdz-truncate-string">{{'search-management.tabs.' + type + '-found' | translate:'{number:0}':'messageformat'}}</span>
        </md-not-found>
        <div ng-messages="conceptFilterForm.conceptFilter.$error">
            <div ng-message="md-require-match">
                {{'search-management.filter.concept-filter.no-valid-selected' | translate}}
            </div>
        </div>
    </md-autocomplete>
</div>
