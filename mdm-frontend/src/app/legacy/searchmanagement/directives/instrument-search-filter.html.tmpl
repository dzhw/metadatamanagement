<div ng-form="instrumentFilterForm" layout="row" layout-align="center center">
    <md-autocomplete fdz-autofocus="!currentSearchParams.filter.instrument" md-delay="250" class="fdz-search-filter-component" md-input-name="instrumentFilter" md-floating-label="{{'search-management.filter.floating-label.instrument' | translate}}" flex md-min-length="0" md-require-match="true" md-select-on-match="true" md-selected-item="currentInstrument"
      md-selected-item-change="onSelectionChanged(currentInstrument)" md-search-text="searchText" md-items="item in searchInstruments(searchText)" md-item-text="(item.description | displayI18nString) + ' (' + item.masterId + ')'" md-clear-button="true" md-no-cache="true" md-menu-class="fdz-search-filter-items" md-select-on-focus="true">
        <md-item-template>
            <span class="item-title fdz-truncate-string">
              <strong md-highlight-text="searchText" md-highlight-flags="ig">{{(item.description | displayI18nString)}}</strong>
              <span class="label label-as-badge label-default" md-highlight-text="searchText" md-highlight-flags="ig">{{item.masterId}}</span>
            </span>
            <span class="item-metadata fdz-truncate-string">{{'search-management.tabs.' + type + '-found' | translate:'{number:' + item.count + '}':'messageformat'}}</span>
        </md-item-template>
        <md-not-found>
          <span class="item-title fdz-truncate-string">
            <strong>{{'search-management.filter.instrument-filter.not-found' | translate}}</strong>
          </span>
          <span class="item-metadata fdz-truncate-string">{{'search-management.tabs.' + type + '-found' | translate:'{number:0}':'messageformat'}}</span>
        </md-not-found>
        <div ng-messages="instrumentFilterForm.instrumentFilter.$error">
            <div ng-message="md-require-match">
                {{'search-management.filter.instrument-filter.no-valid-selected' | translate}}
            </div>
        </div>
    </md-autocomplete>
</div>
