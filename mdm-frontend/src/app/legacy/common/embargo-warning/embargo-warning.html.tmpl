<md-card class="fdz-embargo-warning">
    <md-card-header style="border: none !important; padding: 0px;">
        <md-card-title style="padding: 0px;">
            <md-card-title-text>
                <span class="md-subhead b" ng-if="isOrderView">{{
                    'embargo-warning.data-package.title-order-view' | translate: {projectId: project.masterId} }}</span>
                <span class="md-subhead b" ng-if="!isOrderView">{{
                    'embargo-warning.data-package.title-provider-view' | translate: {projectId: project.id} }}</span>
            </md-card-title-text>
        </md-card-title>
    </md-card-header>
    <md-card-content ng-if="isOrderView && !ctrl.isEmbargoDateExpired()" style="text-align: justify; hyphens: auto; margin-bottom: 16px;">
        <span data-translate="embargo-warning.data-package.content-order-view" translate-values="{date: ctrl.dateString}">
        </span>
    </md-card-content>
    <md-card-content ng-if="isOrderView && ctrl.isEmbargoDateExpired()" style="text-align: justify; hyphens: auto; margin-bottom: 16px;">
        <span data-translate="embargo-warning.data-package.content-order-view-expired">
        </span>
    </md-card-content>
    <md-card-content ng-if="!isOrderView && !ctrl.isEmbargoDateExpired()" style="text-align: justify; hyphens: auto; margin-bottom: 16px;">
        <span data-translate="embargo-warning.data-package.content-provider-view" translate-values="{date: ctrl.dateString}">
        </span>
    </md-card-content>
    <md-card-content ng-if="!isOrderView && ctrl.isEmbargoDateExpired()" style="text-align: justify; hyphens: auto; margin-bottom: 16px;">
        <span data-translate="embargo-warning.data-package.content-provider-view-expired">
        </span>
    </md-card-content>
</md-card>