<div layout="row"
     layout-gt-sm="row"
     class="ms-flex">
  <title-component
    index="$ctrl.index"
    name="analysisDataPackages"
    not-null="true"
    current-form="$ctrl.currentForm"
    translation-key-package="analysis-package"
    translation-key-name="title"
    max-length="2048"
    content="$ctrl.package"
    class="df fg"></title-component>
</div>
<div layout="row"
     layout-gt-sm="row"
     class="ms-flex">
  <text-component
    bilingual="true"
    index="$ctrl.index"
    name="analysisDataPackages"
    not-null="true"
    current-form="$ctrl.currentForm"
    translation-key-package="analysis-package"
    translation-key-name="description"
    max-length="2048"
    content="$ctrl.package.description"
    class="df fg"></text-component>
</div>
<div layout="row"
     layout-gt-sm="row"
     class="ms-flex">
  <text-component
    bilingual="true"
    index="$ctrl.index"
    name="analysisDataPackages"
    not-null="false"
    current-form="$ctrl.currentForm"
    translation-key-package="analysis-package"
    translation-key-name="annotations"
    max-length="2048"
    content="$ctrl.package.annotations"
    class="df fg"></text-component>
</div>
<div layout="row"
     layout-gt-sm="row"
     class="ms-flex">
  <text-component
    bilingual="true"
    index="$ctrl.index"
    name="analysisDataPackages"
    not-null="true"
    current-form="$ctrl.currentForm"
    translation-key-package="analysis-package"
    translation-key-name="dataSource"
    max-length="512"
    content="$ctrl.package.dataSource"
    class="df fg"></text-component>
</div>
<div layout="row"
     layout-gt-sm="row"
     class="ms-flex">
  <text-component
    bilingual="false"
    index="$ctrl.index"
    name="analysisDataPackages"
    not-null="false"
    current-form="$ctrl.currentForm"
    translation-key-package="analysis-package"
    translation-key-name="dataSourceUrl"
    max-length="2000"
    content="$ctrl.package.dataSourceUrl"
    class="df fg"></text-component>
</div>
<div layout="row"
     layout-gt-sm="row"
     class="ms-flex">
  <md-input-container flex="40"
                      md-is-error="!$ctrl.currentForm['analysisDataPackageAvailabilityType_' + $ctrl.index].$valid && ($ctrl.currentForm['analysisDataPackageAvailabilityType_' + $ctrl.index].$dirty || $ctrl.currentForm['analysisDataPackageAvailabilityType_' + $ctrl.index].$touched)"
                      class="ml28 ms-flex">
    <label>{{ 'analysis-package-management.detail.label.availabilityType' | translate}}</label>
    <md-select ng-model="$ctrl.package.availabilityType"
               ng-model-options="{trackBy: '$value.de'}"
               name="analysisDataPackagesAvailabilityType_{{$ctrl.index}}" required>
      <md-option ng-repeat="item in $ctrl.availabilityType"
                 ng-value="item">
        {{ item[$ctrl.currentLanguage] }}
      </md-option>
    </md-select>
    <div class="fdz-input-hint"
         ng-if="!$ctrl.currentForm['analysisDataPackageAvailabilityType_' + $ctrl.index].$dirty && !$ctrl.currentForm['analysisDataPackageAvailabilityType_' + $ctrl.index].$touched && !$ctrl.package.availabilityType">
      {{'analysis-package-management.edit.hints.availabilityType.choose' | translate}}
    </div>
    <div class="fdz-input-hint" ng-if="$ctrl.package.availabilityType === 'OPEN_ACCESS'">
      {{'analysis-package-management.edit.hints.availabilityType.open' | translate}}
    </div>
    <div class="fdz-input-hint" ng-if="$ctrl.package.availabilityType === 'RESTRICTED_ACCESS'">
      {{'analysis-package-management.edit.hints.availabilityType.restricted' | translate}}
    </div>
    <div class="fdz-input-hint" ng-if="$ctrl.package.availabilityType === 'NOT_ACCESSIBLE'">
      {{'analysis-package-management.edit.hints.availabilityType.none' | translate}}
    </div>
    <div multiple ng-messages="$ctrl.currentForm['analysisDataPackageAvailabilityType_' + $ctrl.index].$error">
      <div ng-message="required">{{'analysis-package-management.error.analysis-package.analysisDataPackages.availabilityType.i18n-not-null' |
      translate}}
      </div>
    </div>
  </md-input-container>
</div>
