<div layout="row"
     layout-gt-sm="row"
     class="ms-flex">
  <title-component
    index="$ctrl.index"
    name="analysisDataPackages"
    not-null="true"
    current-form="$ctrl.currentForm"
    translation-key-package="analysis-package"
    translation-key-name="title"
    max-length="2048"
    content="$ctrl.package"
    class="df fg"></title-component>
</div>
<div layout="row"
     layout-gt-sm="row"
     class="ms-flex">
  <text-component
    bilingual="true"
    index="$ctrl.index"
    name="analysisDataPackages"
    not-null="true"
    current-form="$ctrl.currentForm"
    translation-key-package="analysis-package"
    translation-key-name="description"
    max-length="2048"
    content="$ctrl.package.description"
    class="df fg"></text-component>
</div>
<div layout="row"
     layout-gt-sm="row"
     class="ms-flex">
  <text-component
    bilingual="true"
    index="$ctrl.index"
    name="analysisDataPackages"
    not-null="false"
    current-form="$ctrl.currentForm"
    translation-key-package="analysis-package"
    translation-key-name="annotations"
    max-length="2048"
    content="$ctrl.package.annotations"
    class="df fg"></text-component>
</div>
<div layout="row"
     layout-gt-sm="row"
     class="ms-flex">
  <text-component
    bilingual="true"
    index="$ctrl.index"
    name="analysisDataPackages"
    not-null="true"
    current-form="$ctrl.currentForm"
    translation-key-package="analysis-package"
    translation-key-name="dataSource"
    max-length="512"
    content="$ctrl.package.dataSource"
    class="df fg"></text-component>
</div>
<div layout="row"
     layout-gt-sm="row"
     class="ms-flex">
  <md-input-container flex="50"
                      class="ml28 mr8"
                      md-is-error="!$ctrl.currentForm['analysisDataPackagesDataSourceUrl_' + $ctrl.index].$valid && ($ctrl.currentForm['analysisDataPackagesDataSourceUrl_' + $ctrl.index].$dirty || $ctrl.currentForm['analysisDataPackagesDataSourceUrl_' + $ctrl.index].$touched)">
    <label>{{'analysis-package-management.detail.label.analysisDataPackages.dataSourceUrl' | translate}}</label>
    <input type="url" md-no-asterisk
           name="analysisDataPackagesDataSourceUrl_{{$ctrl.index}}" md-maxlength="2000"
           ng-model="$ctrl.package.dataSourceUrl" autocomplete="off">
    <div class="fdz-input-hint"
         ng-if="!$ctrl.currentForm['analysisDataPackagesDataSourceUrl_' + $ctrl.index].$dirty && !$ctrl.currentForm['analysisDataPackagesDataSourceUrl_' + $ctrl.index].$touched">
      {{ 'analysis-package-management.edit.hints.analysisDataPackages.dataSourceUrl' | translate}}
    </div>
    <div multiple
         ng-messages="$ctrl.currentForm['analysisDataPackagesDataSourceUrl_' + $ctrl.index].$error">
      <div ng-message="md-maxlength">
        {{'analysis-package-management.error.analysis-package.analysisDataPackages.dataSourceUrl.url-size' | translate}}
      </div>
      <div ng-message="url">
        {{'analysis-package-management.error.analysis-package.analysisDataPackages.dataSourceUrl.invalid-url' | translate}}
      </div>
    </div>
  </md-input-container>
  <md-input-container flex="50"
                      md-is-error="!$ctrl.currentForm['analysisDataPackageAvailabilityType_' + $ctrl.index].$valid && ($ctrl.currentForm['analysisDataPackageAvailabilityType_' + $ctrl.index].$dirty || $ctrl.currentForm['analysisDataPackageAvailabilityType_' + $ctrl.index].$touched)"
                      class="mr8 ms-flex">
    <label>{{ 'analysis-package-management.detail.label.availabilityType' | translate}}</label>
    <md-select ng-model="$ctrl.package.availabilityType"
               ng-model-options="{trackBy: '$value.de'}"
               name="analysisDataPackagesAvailabilityType_{{$ctrl.index}}"
               required>
      <md-option ng-repeat="item in $ctrl.availabilityType"
                 ng-value="item">
        {{ item[$ctrl.currentLanguage] }}
      </md-option>
    </md-select>
    <div class="fdz-input-hint"
         ng-if="!$ctrl.currentForm['analysisDataPackageAvailabilityType_' + $ctrl.index].$dirty && !$ctrl.currentForm['analysisDataPackageAvailabilityType_' + $ctrl.index].$touched && !$ctrl.package.availabilityType">
      {{'analysis-package-management.edit.hints.availabilityType.choose' | translate}}
    </div>
    <div class="fdz-input-hint"
         ng-if="$ctrl.package.availabilityType.en === 'open-access'">
      {{'analysis-package-management.edit.hints.availabilityType.open' | translate}}
    </div>
    <div class="fdz-input-hint"
         ng-if="$ctrl.package.availabilityType.en === 'restricted access'">
      {{'analysis-package-management.edit.hints.availabilityType.restricted' | translate}}
    </div>
    <div class="fdz-input-hint"
         ng-if="$ctrl.package.availabilityType.en === 'not accessible'">
      {{'analysis-package-management.edit.hints.availabilityType.none' | translate}}
    </div>
    <div multiple
         ng-messages="$ctrl.currentForm['analysisDataPackageAvailabilityType_' + $ctrl.index].$error">
      <div ng-message="required">
        {{'analysis-package-management.error.analysis-package.analysisDataPackages.availabilityType.i18n-not-null' |
      translate}}
      </div>
    </div>
  </md-input-container>
</div>
