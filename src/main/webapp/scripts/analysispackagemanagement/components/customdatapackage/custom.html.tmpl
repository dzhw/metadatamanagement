<div layout="row"
     layout-gt-sm="row"
     class="ms-flex">
  <title-component
    index="$ctrl.index"
    name="analysisDataPackages"
    not-null="true"
    current-form="$ctrl.currentForm"
    translation-key-package="analysis-package"
    translation-key-name="title"
    max-length="2048"
    content="$ctrl.package"
    class="df fg"></title-component>
</div>
<div layout="row"
     layout-gt-sm="row"
     class="ms-flex">
  <text-component
    bilingual="true"
    index="$ctrl.index"
    name="analysisDataPackages"
    not-null="true"
    current-form="$ctrl.currentForm"
    translation-key-package="analysis-package"
    translation-key-name="description"
    max-length="2048"
    content="$ctrl.package.description"
    class="df fg"></text-component>
</div>
<div layout="row"
     layout-gt-sm="row"
     class="ms-flex">
  <text-component
    bilingual="true"
    index="$ctrl.index"
    name="analysisDataPackages"
    not-null="false"
    current-form="$ctrl.currentForm"
    translation-key-package="analysis-package"
    translation-key-name="annotations"
    max-length="2048"
    content="$ctrl.package.annotations"
    class="df fg"></text-component>
</div>
<div layout="row"
     layout-gt-sm="row"
     class="ms-flex">
  <md-input-container flex="50"
                      md-is-error="!$ctrl.currentForm['analysisDataPackageAvailabilityType_' + $ctrl.index].$valid && ($ctrl.currentForm['analysisDataPackageAvailabilityType_' + $ctrl.index].$dirty || $ctrl.currentForm['analysisDataPackageAvailabilityType_' + $ctrl.index].$touched)"
                      class="ml28 mr8 ms-flex">
    <label>{{ 'analysis-package-management.detail.label.availabilityType' | translate}}</label>
    <md-select ng-model="$ctrl.package.availabilityType"
               ng-model-options="{trackBy: '$value.de'}"
               name="analysisDataPackagesAvailabilityType_{{$ctrl.index}}"
               required>
      <md-option ng-repeat="item in $ctrl.availabilityType"
                 ng-value="item">
        {{ item[$ctrl.currentLanguage] }}
      </md-option>
    </md-select>
    <div class="fdz-input-hint"
         ng-if="!$ctrl.currentForm['analysisDataPackageAvailabilityType_' + $ctrl.index].$dirty && !$ctrl.currentForm['analysisDataPackageAvailabilityType_' + $ctrl.index].$touched && !$ctrl.package.availabilityType">
      {{'analysis-package-management.edit.hints.availabilityType.choose' | translate}}
    </div>
    <div class="fdz-input-hint"
         ng-if="$ctrl.package.availabilityType.en === 'accessible'">
      {{'analysis-package-management.edit.hints.availabilityType.accessible' | translate}}
    </div>
    <div class="fdz-input-hint"
         ng-if="$ctrl.package.availabilityType.en === 'ot-accessible'">
      {{'analysis-package-management.edit.hints.availabilityType.not-accessible' | translate}}
    </div>
    <div multiple
         ng-messages="$ctrl.currentForm['analysisDataPackageAvailabilityType_' + $ctrl.index].$error">
      <div ng-message="required">
        {{'analysis-package-management.error.analysis-package.analysisDataPackages.availabilityType.i18n-not-null' |
      translate}}
      </div>
    </div>
  </md-input-container>

  <md-input-container flex="50"
                      md-is-error="!$ctrl.currentForm['analysisDataPackagesAccessWay_' + $ctrl.index].$valid && ($ctrl.currentForm['analysisDataPackagesAccessWay_' + $ctrl.index].$dirty || $ctrl.currentForm['analysisDataPackagesAccessWay_' + $ctrl.index].$touched)"
                      class="mr8 ms-flex">
    <label>{{ 'analysis-package-management.detail.label.accessWay' | translate}}</label>
    <md-select ng-model="$ctrl.package.accessWay"
               name="analysisDataPackagesAccessWay_{{$ctrl.index}}"
               required>
      <md-option ng-repeat="item in $ctrl.accessWay"
                 ng-value="item">
        {{ item }}
      </md-option>
    </md-select>
    <div class="fdz-input-hint"
         ng-if="!$ctrl.currentForm['analysisDataPackagesAccessWay_' + $ctrl.index].$dirty && !$ctrl.currentForm['analysisDataPackagesAccessWay_' + $ctrl.index].$touched && !$ctrl.package.availabilityType">
      {{'analysis-package-management.edit.hints.accessWay.choose' | translate}}
    </div>
    <div multiple
         ng-messages="$ctrl.currentForm['analysisDataPackagesAccessWay_' + $ctrl.index].$error">
      <div ng-message="required">
        {{'analysis-package-management.error.analysis-package.analysisDataPackages.accessWay.i18n-not-null' |
      translate}}
      </div>
    </div>
  </md-input-container>
</div>

<div layout="row"
     layout-gt-sm="row"
     class="ms-flex">
  <url-component
    index="$ctrl.index"
    not-null="false"
    current-form="$ctrl.currentForm"
    max-length="2048"
    content="$ctrl.package.dataSources",
    template-url="scripts/common/url/url-with-index.html.tmpl"
    class="df fg"></url-component>
</div>
