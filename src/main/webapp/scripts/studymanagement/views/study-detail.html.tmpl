<div ng-if="study.$resolved">
    <md-card>
        <md-card-header>
            <md-card-header-text>
                <h1 class="md-headline">{{study.title[currentLanguage]}}</h1>
            </md-card-header-text>
        </md-card-header>
        <md-card-content style="padding-top: 0px;" layout="column">
            <div layout="row" layout-sm="column" layout-xs="column">
                <md-card flex-gt-sm>
                    <md-card-header>
                        <md-card-header-text>
                            <h2 class="md-title">{{'study-management.detail.study-informations' | translate }}</h2>
                        </md-card-header-text>
                    </md-card-header>
                    <md-divider></md-divider>
                    <md-card-content>
                        <section style="margin-bottom: 0.5em;" ng-if="study.surveySeries[currentLanguage]">
                            <span style="font-weight: bold;">{{'study-management.detail.surveySeries' | translate }}:
                            </span>
                            <span>{{study.surveySeries[currentLanguage]}}</span>
                        </section>
                        <section style="margin-bottom: 0.5em;" ng-if="study.institution[currentLanguage]">
                            <span style="font-weight: bold;">{{'study-management.detail.institution' | translate }}:
                            </span>
                            <span>{{study.institution[currentLanguage]}}</span>
                        </section>
                        <section style="margin-bottom: 0.5em;" ng-if="study.authors">
                            <span style="font-weight: bold;">{{'study-management.detail.authors' | translate }}:
                            </span>
                            <span>{{study.authors}}</span>
                        </section>
                        <section style="margin-bottom: 0.5em;" ng-if="study.sponsor[currentLanguage]">
                            <span style="font-weight: bold;">{{'study-management.detail.sponsors' | translate }}:
                            </span>
                            <span>{{study.sponsor[currentLanguage]}}</span>
                        </section>
                        <section style="margin-bottom: 0.5em;" ng-if="study.accessWays">
                            <span style="font-weight: bold;">{{'study-management.detail.accessWays' | translate }}:
                            </span>
                            <span>{{study.accessWays.join(', ')}}</span>
                        </section>
                            <section ng-if="study.releases.length > 0" ng-repeat="release in study.releases">
                                <section style="margin-bottom: 0.5em;">
                                    <span style="font-weight: bold;">doi:
                                    </span>
                                    <span>{{release.doi}}</span>
                                </section>
                                <section style="margin-bottom: 0.5em;">
                                    <span style="font-weight: bold;">{{'study-management.detail.version' | translate }}:
                                    </span>
                                    <span>{{release.version}}</span>
                                </section>
                        </section>
                        <section style="margin-bottom: 0.5em;" ng-if="study.citationHint[currentLanguage]">
                            <span style="font-weight: bold;">{{'study-management.detail.citationHint' | translate }}:
                            </span>
                            <span>{{study.citationHint[currentLanguage]}}</span>
                        </section>
                    </md-card-content>
                </md-card>
                <md-card>
                    <md-card-header>
                        <md-card-header-text>
                            <h2 class="md-title">{{'study-management.detail.related-information' | translate }}</h2>
                        </md-card-header-text>
                    </md-card-header>
                    <md-divider></md-divider>
                    <md-card-content>
                        <section>
                            <md-button class="md-raised" ng-click="showQuestions()">
                                <md-icon md-svg-src="/assets/images/icons/question.svg"></md-icon>
                                <span>{{'question-management.detail.questions' | translate }}</span>
                            </md-button>
                        </section>
                        <section>
                            <md-button class="md-raised" ng-disabled="true" ng-click="showInstruments()">
                                <md-icon md-svg-src="/assets/images/icons/instrument.svg"></md-icon>
                                <span>{{'instrument-management.detail.instruments' | translate }}</span>
                            </md-button>
                        </section>
                        <section>
                            <md-button class="md-raised" ng-click="showRelatedPublications()">
                                <md-icon md-svg-src="/assets/images/icons/related-publication.svg"></md-icon>
                                <span>{{'related-publication-management.detail.publications' | translate }}</span>
                            </md-button>
                        </section>
                    </md-card-content>
                </md-card>
            </div>
            <div layout="row">
                <md-card flex>
                    <md-card-header>
                        <md-card-header-text>
                            <h2 class="md-title">{{'study-management.detail.description' | translate }}</h2>
                        </md-card-header-text>
                    </md-card-header>
                    <md-divider></md-divider>
                    <md-card-content>
                        <p ng-if="study.description[currentLanguage]">{{study.description[currentLanguage]}}</p>
                    </md-card-content>
                </md-card>
            </div>
            <div layout="row" layout-sm="column" layout-xs="column">
              <div flex-gt-sm="50">
                <div ng-repeat="survey in surveys">
                  <survey-search-result search-result="survey._source"></survey-search-result>
                </div>
              </div>
              <div flex-gt-sm="50">
                <div ng-repeat="dataSet in dataSets">
                  <dataset-search-result ng search-result="dataSet._source"></dataset-search-result>
                </div>
              </div>
            </div>
            <div layout="row">
                <md-card flex>
                    <md-card-header>
                        <md-card-header-text>
                            <h2 class="md-title">{{'instrument-management.detail.instruments' | translate }}</h2>
                        </md-card-header-text>
                    </md-card-header>
                    <md-content style="background-color:white;"></md-content>
                </md-card>
            </div>
        </md-card-content>
    </md-card>
</div>
