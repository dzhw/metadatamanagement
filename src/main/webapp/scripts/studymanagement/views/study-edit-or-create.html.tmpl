      </md-card>
      <md-card>
        <md-card-header>
          <md-card-header-text>
            <h2 class="md-title">{{'study-management.detail.label.authors' | translate }}</h2>
          </md-card-header-text>
        </md-card-header>
        <md-divider></md-divider>
        <md-card-content style="padding-bottom: 0px; padding-left: 0px;">
          <div id="move-container" layout="row" ng-repeat="person in ctrl.study.authors track by $index">
            <md-button class="md-primary md-icon-button" ng-click="ctrl.deleteAuthor($index)"
                       ng-if="ctrl.study.authors.length > 1"
                       style="margin-top: 18px; margin-left: 0px; margin-right: 0px;">
              <md-tooltip md-autohide="true" md-direction="bottom"
                          md-z-index="bowser.mobile || bowser.tablet ? -100 : 100001">
                {{'study-management.edit.delete-author-tooltip' | translate}}
              </md-tooltip>
              <md-icon md-font-set="material-icons">delete_forever</md-icon>
            </md-button>
            <div ng-if="ctrl.study.authors.length <= 1" class="ml16"></div>
            <md-input-container flex="33"
                                md-is-error="!studyForm['authorsFirstName_' + $index].$valid && (studyForm['authorsFirstName_' + $index].$dirty || studyForm['authorsFirstName_' + $index].$touched)">
              <label class="fdz-input-required">{{'study-management.edit.label.first-name' | translate}}</label>
              <input fdz-required md-no-asterisk name="authorsFirstName_{{$index}}"
                     ng-blur="ctrl.deleteCurrentAuthor($event)" ng-focus="ctrl.setCurrentAuthor($index,$event)"
                     ng-model="person.firstName">
              <div
                class="fdz-input-hint"
                ng-if="!studyForm['authorsFirstName_' + $index].$dirty && !studyForm['authorsFirstName_' + $index].$touched">
                {{'study-management.edit.hints.authors.first-name' | translate}}
              </div>
              <div multiple ng-messages="studyForm['authorsFirstName_' + $index].$error">
                <div ng-message="fdz-required">{{'global.error.person.first-name.not-empty' | translate}}</div>
              </div>
            </md-input-container>
            <md-input-container flex
                                md-is-error="!studyForm['authorsMiddleName_' + $index].$valid && (studyForm['authorsMiddleName_' + $index].$dirty || studyForm['authorsMiddleName_' + $index].touched)">
              <label>{{'study-management.edit.label.middle-name' | translate}}</label>
              <input name="authorsMiddleName_{{$index}}" ng-blur="ctrl.deleteCurrentAuthor($event)"
                     ng-focus="ctrl.setCurrentAuthor($index,$event)" ng-model="person.middleName">
              <div
                class="fdz-input-hint"
                ng-if="!studyForm['authorsMiddleName_' + $index].$dirty && !studyForm['authorsMiddleName_' + $index].$touched">
                {{'study-management.edit.hints.authors.middle-name' | translate}}
              </div>
              <div multiple ng-messages="studyForm['authorsMiddleName_' + $index].$error">
              </div>
            </md-input-container>
            <md-input-container flex="33"
                                md-is-error="!studyForm['authorsLastName_' + $index].$valid && (studyForm['authorsLastName_' + $index].$dirty || studyForm['authorsLastName_' + $index].$touched)">
              <label class="fdz-input-required">{{'study-management.edit.label.last-name' | translate}}</label>
              <input fdz-required md-no-asterisk name="authorsLastName_{{$index}}"
                     ng-blur="ctrl.deleteCurrentAuthor($event)" ng-focus="ctrl.setCurrentAuthor($index,$event)"
                     ng-model="person.lastName">
              <div
                class="fdz-input-hint"
                ng-if="!studyForm['authorsLastName_' + $index].$dirty && !studyForm['authorsLastName_' + $index].$touched">
                {{'study-management.edit.hints.authors.last-name' | translate}}
              </div>
              <div multiple ng-messages="studyForm['authorsLastName_' + $index].$error">
                <div ng-message="fdz-required">{{'global.error.person.last-name.not-empty' | translate}}</div>
              </div>
