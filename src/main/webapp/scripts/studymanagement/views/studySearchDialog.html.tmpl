<md-dialog aria-label="{{'study-management.detail.studies' | translate }}" style="width: 70%;">
    <md-toolbar>
        <div class="md-toolbar-tools">
            <h2>{{'study-management.detail.studies' | translate }}</h2>
            <span flex></span>
            <md-button class="md-icon-button" ng-click="ctrl.closeDialog()">
                <md-icon md-svg-src="/assets/images/icons/ic_close_white_24px.svg" aria-label="Close dialog"></md-icon>
            </md-button>
        </div>
    </md-toolbar>
    <md-dialog-content>
      <div block-ui="blockRelatedStudyContainer">
          <div class="fdz-InfiniteScroll">
              <md-virtual-repeat-container id="vertical-container">
                  <div md-virtual-repeat="item in ctrl.infiniteItems" md-on-demand  flex>
                    <md-card ui-sref="studyDetail({id: item._source.id})" class="fdz-search-result">
                        <md-card-header class="fdz-card-header-border">
                            <md-card-avatar>
                                <md-icon md-svg-src="/assets/images/icons/study.svg" class="fdz-search-result-icon"></md-icon>
                            </md-card-avatar>
                            <md-card-header-text class="fdz-truncate-string">
                                <div class="md-title fdz-truncate-string">{{item._source.title}} ({{item._source.id}})</div>
                                <div class="md-subhead fdz-truncate-string">{{item._source.authors}}</div>
                            </md-card-header-text>
                        </md-card-header>
                        <md-card-content>
                            <div>{{item._source.description}}</div>
                        </md-card-content>
                    </md-card>
                  </div>
              </md-virtual-repeat-container>
          </div>
      </div>
    </md-dialog-content>
</md-dialog>
