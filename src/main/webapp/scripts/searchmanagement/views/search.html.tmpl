<div flex layout="column" ng-switch="isAuthenticated()">
    <md-card style="margin-bottom: 0px">
        <div class="fdz-search-input-container">
            <form role="search" ng-submit="hideMobileKeyboard($event)">
                <md-input-container class="fdz-search-input">
                    <label>{{tabs[searchParams.selectedTabIndex].inputLabel|translate}}</label>
                    <md-icon md-font-set="material-icons">search</md-icon>
                    <input id="query" type="search" ng-model="searchParams.query" ng-change="onQueryChanged()" ng-model-options="{debounce: 250}" autocomplete="off" tabindex="0">
                </md-input-container>
                <input type="submit" ng-hide="true">
            </form>
              <md-tabs md-selected="searchParams.selectedTabIndex" md-dynamic-height>
                <md-tab ng-repeat="tab in tabs" md-on-select="onSelectedTabChanged()" ng-disabled="tab.disabled">
                  <md-tab-label>
                    <md-icon ng-if="tab.icon" md-svg-icon="{{tab.icon}}"></md-icon>
                    <span>{{tab.title|translate}} {{tab.count != null? '(' + tab.count + ')' : ''}}</span>
                    <md-tooltip md-direction="top" md-autohide="true" md-z-index="bowser.msie || bowser.msedge || bowser.mobile || bowser.tablet ? -100 : 100">{{tab.title+'-tooltip'|translate}}</md-tooltip>
                  </md-tab-label>
                </md-tab>
              </md-tabs>
        </div>
        <md-progress-linear md-mode="indeterminate" ng-if="isSearching"></md-progress-linear>
    </md-card>
    <div flex ngf-drop="tabs[searchParams.selectedTabIndex].uploadFunction($files)" ngf-multiple="true" ngf-drag-over-class="{accept:'fdz-file-drop-accept', delay:0}" ngf-drop-disabled="((!currentProject || currentProject.release) && tabs[searchParams.selectedTabIndex].elasticSearchType !== 'related_publications') || !hasAuthority('ROLE_PUBLISHER') || !tabs[searchParams.selectedTabIndex].uploadFunction">
        <div ng-repeat="result in searchResult" ng-switch="result._type">
            <variable-search-result ng-switch-when="variables" search-result="result._source" current-language="currentLanguage" bowser="bowser"></variable-search-result>
            <survey-search-result ng-switch-when="surveys" search-result="result._source" current-language="currentLanguage" bowser="bowser" add-margin="$mdMedia('gt-sm')"></survey-search-result>
            <question-search-result ng-switch-when="questions" search-result="result._source" current-language="currentLanguage" bowser="bowser"></question-search-result>
            <dataset-search-result ng-switch-when="data_sets" search-result="result._source" current-language="currentLanguage" bowser="bowser" add-margin="$mdMedia('gt-sm')"></dataset-search-result>
            <study-search-result ng-switch-when="studies" search-result="result._source" current-language="currentLanguage" bowser="bowser"></study-search-result>
            <related-publication-search-result ng-switch-when="related_publications" search-result="result._source" current-language="currentLanguage" bowser="bowser"></related-publication-search-result>
            <instrument-search-result ng-switch-when="instruments" search-result="result._source" current-language="currentLanguage" bowser="bowser"></instrument-search-result>
        </div>
        <div ng-if="pageObject.totalHits && pageObject.totalHits > pageObject.size" layout="row" layout-align="center">
            <ul template-url="custom-uib-pager-template" uib-pagination next-text="{{'global.pagination.next'|translate}}" previous-text="{{'global.pagination.previous'|translate}}" total-items="pageObject.totalHits" ng-model="pageObject.page" max-size="5" ng-change="onPageChanged()" items-per-page="pageObject.size"
                class="pagination-sm"></ul>
        </div>
    </div>
    <div ng-switch-when="true" data-has-authority="ROLE_PUBLISHER" class="fdz-fab-button-container" layout="column">
        <md-button class="md-primary md-fab" ng-click="refresh()" style="margin-bottom: 1em;">
            <md-tooltip md-direction="left" md-autohide="true" md-z-index="bowser.mobile || bowser.tablet ? -100 : 100">
                {{'search-management.buttons.refresh-tooltip' | translate}}
            </md-tooltip>
            <md-icon md-font-set="material-icons">refresh</md-icon>
        </md-button>
        <!-- Index 1 = Study Tab -->
        <md-button aria-label="{{'search-management.buttons.upload-studies' | translate}}" ng-if="tabs[searchParams.selectedTabIndex].elasticSearchType==='studies'" type="file" ngf-select="uploadStudy($files)" ngf-multiple="true" class="md-accent md-fab" directory
            webkitdirectory ng-disabled="!currentProject || currentProject.release">
            <md-tooltip ng-hide="!currentProject || currentProject.release" md-direction="left" md-autohide="true" md-z-index="bowser.mobile || bowser.tablet ? -100 : 100">
                {{'search-management.buttons.upload-studies-tooltip' | translate}}
            </md-tooltip>
            <md-icon md-font-set="material-icons">add</md-icon>
        </md-button>
        <!-- Index 2 = Questions Tab -->
        <md-button aria-label="{{'search-management.buttons.upload-questions' | translate}}" ng-if="tabs[searchParams.selectedTabIndex].elasticSearchType==='questions'" type="file" ngf-select="uploadQuestions($files)" ngf-multiple="true" class="md-accent md-fab"
            directory webkitdirectory ng-disabled="!currentProject || currentProject.release">
            <md-tooltip ng-hide="!currentProject || currentProject.release" md-direction="left" md-autohide="true" md-z-index="bowser.mobile || bowser.tablet ? -100 : 100">
                {{'search-management.buttons.upload-questions-tooltip' | translate}}
            </md-tooltip>
            <md-icon md-font-set="material-icons">add</md-icon>
        </md-button>
        <md-button aria-label="{{'search-management.buttons.upload-variables' | translate}}" ng-if="tabs[searchParams.selectedTabIndex].elasticSearchType==='variables'" type="file" ngf-select="uploadVariables($files)" class="md-accent md-fab" ngf-multiple="true"
            directory webkitdirectory ng-disabled="!currentProject || currentProject.release">
            <md-tooltip ng-hide="!currentProject || currentProject.release" md-direction="left" md-autohide="true" md-z-index="bowser.mobile || bowser.tablet ? -100 : 100">
                {{'search-management.buttons.upload-variables-tooltip' | translate}}
            </md-tooltip>
            <md-icon md-font-set="material-icons">add</md-icon>
        </md-button>
        <md-button aria-label="{{'search-management.buttons.upload-surveys' | translate}}" ng-if="tabs[searchParams.selectedTabIndex].elasticSearchType==='surveys'" type="file" ngf-select="uploadSurveys($files)" class="md-accent md-fab" ngf-multiple="true" directory
            webkitdirectory ng-disabled="!currentProject || currentProject.release">
            <md-tooltip ng-hide="!currentProject || currentProject.release" md-direction="left" md-autohide="true" md-z-index="bowser.mobile || bowser.tablet ? -100 : 100">
                {{'search-management.buttons.upload-surveys-tooltip' | translate}}
            </md-tooltip>
            <md-icon md-font-set="material-icons">add</md-icon>
        </md-button>
        <md-button aria-label="{{'search-management.buttons.upload-data-sets' | translate}}" ng-if="tabs[searchParams.selectedTabIndex].elasticSearchType==='data_sets'" type="file" ngf-select="uploadDataSets($files)" class="md-accent md-fab" ngf-multiple="true"
            directory webkitdirectory ng-disabled="!currentProject || currentProject.release">
            <md-tooltip ng-hide="!currentProject || currentProject.release" md-direction="left" md-autohide="true" md-z-index="bowser.mobile || bowser.tablet ? -100 : 100">
                {{'search-management.buttons.upload-data-sets-tooltip' | translate}}
            </md-tooltip>
            <md-icon md-font-set="material-icons">add</md-icon>
        </md-button>
        <md-button aria-label="{{'search-management.buttons.upload-instruments' | translate}}" ng-if="tabs[searchParams.selectedTabIndex].elasticSearchType==='instruments'" type="file" ngf-select="uploadInstruments($files)" class="md-accent md-fab" ngf-multiple="true"
            directory webkitdirectory ng-disabled="!currentProject || currentProject.release">
            <md-tooltip ng-hide="!currentProject || currentProject.release" md-direction="left" md-autohide="true" md-z-index="bowser.mobile || bowser.tablet ? -100 : 100">
                 {{'search-management.buttons.upload-instruments-tooltip' | translate}}
            </md-tooltip>
            <md-icon md-font-set="material-icons">add</md-icon>
        </md-button>
        <md-button ng-if="tabs[searchParams.selectedTabIndex].elasticSearchType==='related_publications'" ng-click="postValidateRelatedPublications()" class="md-primary md-fab" style="margin-bottom: 1em;">
            <md-tooltip md-direction="left" md-autohide="true" md-z-index="bowser.mobile || bowser.tablet ? -100 : 100">
                {{'search-management.buttons.post-validate-related-publications-tooltip' | translate}}
            </md-tooltip>
            <md-icon md-font-set="material-icons">playlist_add_check</md-icon>
        </md-button>
        <md-button ng-if="tabs[searchParams.selectedTabIndex].elasticSearchType==='related_publications'" type="file" ngf-select="uploadRelatedPublications($file)" accept=".xls"
            class="md-accent md-fab">
            <md-tooltip md-direction="left" md-autohide="true" md-z-index="bowser.mobile || bowser.tablet ? -100 : 100">
                {{'search-management.buttons.upload-related-publications-tooltip' | translate}}
            </md-tooltip>
            <md-icon md-font-set="material-icons">add</md-icon>
        </md-button>
    </div>
</div>
