<md-card>
  <a ui-sref="relatedPublicationDetail({id:searchResult.id})" md-ink-ripple class="fdz-search-result">
        <md-card-header class="fdz-card-header-border">
            <md-card-avatar>
                <md-icon md-svg-src="/assets/images/icons/related-publication.svg" class="fdz-search-result-icon"></md-icon>
            </md-card-avatar>
            <md-card-header-text class="fdz-truncate-string">
                <div class="md-title fdz-truncate-string">{{searchResult.title}} <span class="label label-as-badge label-default">{{searchResult.id}}</span></div>
                <div class="md-subhead fdz-truncate-string">{{searchResult.doi}}</div>
            </md-card-header-text>
        </md-card-header>
        <md-card-content>
            <div>{{searchResult.publicationAbstract | limitTo: 500}}{{searchResult.publicationAbstract.length > 500 ? '...' : ''}}</div>
        </md-card-content>
    </a>
</md-card>
