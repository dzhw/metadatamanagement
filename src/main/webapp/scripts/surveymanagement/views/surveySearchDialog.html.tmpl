<md-dialog aria-label="{{'survey-management.detail.surveys' | translate }}" style="width: 70%;">
    <md-toolbar>
        <div class="md-toolbar-tools">
            <h2>{{'survey-management.detail.surveys' | translate }}</h2>
            <div flex></div>
            <md-button class="md-icon-button" ng-click="ctrl.closeDialog()">
                <md-icon md-svg-src="/assets/images/icons/ic_close_white_24px.svg" aria-label="Close dialog"></md-icon>
            </md-button>
        </div>
    </md-toolbar>
    <md-dialog-content>
        <div block-ui="blockRelatedSurveyContainer">
            <div class="fdz-InfiniteScroll">
                <md-virtual-repeat-container id="vertical-container">
                    <div data-md-virtual-repeat="item in ctrl.infiniteItems" data-md-on-demand flex>
                        <md-card ui-sref="surveyDetail({id:item._source.id})" class="fdz-search-result">
                            <md-card-header class="fdz-card-header-border">
                                <md-card-avatar>
                                    <md-icon md-svg-src="/assets/images/icons/survey.svg" class="fdz-search-result-icon"></md-icon>
                                </md-card-avatar>
                                <md-card-header-text class="fdz-truncate-string">
                                    <div class="md-title fdz-truncate-string">{{item._source.title}}
                                        ({{item._source.id}})</div>
                                    <div class="md-subhead fdz-truncate-string">{{item._source.surveyMethod}}</div>
                                </md-card-header-text>
                            </md-card-header>
                            <md-card-content>
                                <div layout="row" layout-xs="column" class="fdz-truncate-string">
                                    <div class="fdz-search-result-label">
                                        {{'survey-management.detail.field-period' | translate}}
                                    </div>
                                    <div class="fdz-truncate-string">
                                        {{item._source.fieldPeriod.start | date}}
                                        -
                                        {{item._source.fieldPeriod.end | date}}
                                    </div>
                                </div>
                            </md-card-content>
                        </md-card>

                    </div>
                </md-virtual-repeat-container>
            </div>
        </div>
    </md-dialog-content>
</md-dialog>
