<md-dialog aria-label="{{'data-set-management.detail.data-sets' | translate }}" style="width: 70%;">
    <md-toolbar>
        <div class="md-toolbar-tools">
            <h2>{{'data-set-management.detail.data-sets' | translate }}</h2>
            <div flex></div>
            <md-button class="md-icon-button" ng-click="ctrl.closeDialog()">
                <md-icon md-svg-src="/assets/images/icons/ic_close_white_24px.svg" aria-label="Close dialog"></md-icon>
            </md-button>
        </div>
    </md-toolbar>
    <md-dialog-content>
        <div block-ui="blockRelatedDataSetContainer">
            <div class="fdz-InfiniteScroll">
                <md-virtual-repeat-container id="vertical-container">
                    <div data-md-virtual-repeat="item in ctrl.infiniteItems" data-md-on-demand flex>
                      <md-card ui-sref="data-setDetail({projectId: item._source.dataAcquisitionProjectId,
                        dataSetNumber: item._source.number})" class="fdz-search-result">
                          <md-card-header class="fdz-card-header-border">
                              <md-card-avatar>
                                  <md-icon md-svg-src="/assets/images/icons/data-set.svg" class="fdz-search-result-icon"></md-icon>
                              </md-card-avatar>
                              <md-card-header-text class="fdz-truncate-string">
                                  <div class="md-title fdz-truncate-string">{{item._source.description}} ({{item._source.id}})</div>
                                  <div class="md-subhead fdz-truncate-string">{{item._source.type}}</div>
                              </md-card-header-text>
                          </md-card-header>
                          <md-card-content layout="row" layout-xs="column" layout-align="space-between none">
                            <div layout="column">
                                <div layout="row" layout-xs="column">
                                    <div class="fdz-search-result-label">
                                        {{'survey-management.detail.surveys' | translate}}:
                                    </div>
                                    <div layout="column">
                                        <div ng-repeat="title in item._source.surveyTitles track by $index" class="fdz-truncate-string">{{title}}</div>
                                    </div>
                                </div>
                            </div>
                          </md-card-content>
                      </md-card>

                    </div>
                </md-virtual-repeat-container>
            </div>
        </div>
    </md-dialog-content>
</md-dialog>
