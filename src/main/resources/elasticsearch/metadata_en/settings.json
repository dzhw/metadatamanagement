{
	"index" : {
    	"analysis": {
    		"filter": {
        		"english_stop": {
          			"type":       "stop",
          			"stopwords":  "_english_" 
        		},
        		"english_stemmer": {
          			"type":       "stemmer",
          			"language":   "english"
        		},
        		"english_possessive_stemmer": {
          			"type":       "stemmer",
          			"language":   "possessive_english"
        		},
        		"trigrams_filter": {
                    "type":     "ngram",
                    "min_gram": 3,
                    "max_gram": 5
                }
      		},
            "tokenizer": {
                "trigrams_tokenizer": {
                    "type":     "ngram",
                    "min_gram": 3,
                    "max_gram": 5,
                    "token_chars": [
            			"letter","digit"
          			]
                }
            },
            "analyzer": {
                "trigrams": {
                    "type":      "custom",
                    "tokenizer": "trigrams_tokenizer",
                    "filter": [
            			"lowercase"
          			]
              	},
              	"highlight_trigrams" : {
              		"type":      "custom",
                    "tokenizer": "standard",
                    "filter": [
            			"lowercase",
            			"trigrams_filter"
          			]
              	},
              	"highlight_en": {
              		"type":      "custom",
                    "tokenizer": "standard",
                    "filter": [
            			"lowercase",
      					"trigrams_filter"
         			 ]
              	}
         	}
    	}
	}
}