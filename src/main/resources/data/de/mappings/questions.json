{
  "questions": {
  	"_all" : {	
  		 "enabled" : true,
  		 "analyzer": "german"
  	  },
    "properties": {
      "allStringsAsNgrams" : {
      	"type": "string",
      	"analyzer": "trigrams"
      },
      "id": {
        "type": "string",
        "index": "not_analyzed",
        "copy_to": "allStringsAsNgrams"
      },
      "name": {	
      	"type" : "multi_field",
        	"fields" : {
               	"name" : {
      				"type": "string",
        			"index": "not_analyzed",
        			"copy_to": "allStringsAsNgrams"            	
                },
                "highlight" : {
                 	"type" : "string", 
                 	"analyzer" : "highlight_trigrams"
                }
      	}
      },
      "question": {
      	 "type" : "multi_field",
         "fields" : {
               "question" : {
        		"type": "string",
        		"analyzer": "english",
        		"copy_to": "allStringsAsNgrams"            	
                },
                "highlight" : {
                 "type" : "string", 
                 "analyzer" : "highlight_en"
                }
         }
      },
      "variableDocuments": {
        "type": "string" 
      },
      "questionSurvey": {
        "type": "nested",
        "properties": {
          "surveyId": {
            "type": "string",
            "index": "not_analyzed",
            "copy_to": "allStringsAsNgrams"
          },
          "surveyPeriod": {
            "type": "nested",
            "properties": {
              "endDate": {
                "type": "date",
                "format": "date"
              },
              "startDate": {
                "type": "date",
                "format": "date"
              }
            }
          },
          "title": {	
          	"type" : "multi_field",
         	"fields" : {
               "title" : {
        		"type": "string",
        		"index": "not_analyzed",
        		"copy_to": "allStringsAsNgrams"            	
                },
                "highlight" : {
                 "type" : "string", 
                 "analyzer" : "highlight_en"
                }
         	}
          }
        }
      }
    }
  }
}