{
  "variables": {
  	"_all" : {	
  		 "enabled" : true,
  		 "analyzer": "german"
  	  },
    "properties": {
      "allStringsAsNgrams" : {
      	"type": "string",
      	"analyzer": "trigrams"
      },
      "answerOptions": {
        "type": "nested",
        "properties": {
          "code": {
            "type": "integer"
          },
          "label": {
            "type": "string",
            "analyzer": "german",
            "copy_to": "allStringsAsNgrams"
          }
        }
      },
      "dataType": {
        "type": "string",
        "analyzer": "german",
        "copy_to": "allStringsAsNgrams"
      },
      "id": {
        "type": "string",
        "index": "not_analyzed",
        "copy_to": "allStringsAsNgrams"
      },
      "label": {
        "type": "string",
        "analyzer": "german",
        "copy_to": "allStringsAsNgrams"
      },
      "name": {
        "type": "string",
        "index": "not_analyzed",
        "copy_to": "allStringsAsNgrams"
      },
      "scaleLevel": {
        "type": "string",
        "analyzer": "german",
        "copy_to": "allStringsAsNgrams"
      },
      "variableSurvey": {
        "type": "nested",
        "properties": {
          "variableAlias": {
            "type": "string",
            "index": "not_analyzed",
            "copy_to": "allStringsAsNgrams"
          },
          "surveyId": {
            "type": "string",
            "index": "not_analyzed",
            "copy_to": "allStringsAsNgrams"
          },
          "surveyPeriod": {
            "type": "nested",
            "properties": {
              "endDate": {
                "type": "date",
                "format": "date"
              },
              "startDate": {
                "type": "date",
                "format": "date"
              }
            }
          },
          "title": {
            "type": "string",
            "analyzer": "german",
            "copy_to": "allStringsAsNgrams"
          }
        }
      }
    }
  }
}